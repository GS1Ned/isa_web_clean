name: Generate Repository Tree

on:
  workflow_dispatch:
  schedule:
    - cron: "0 3 * * 1" # weekly, Monday 03:00 UTC

permissions:
  contents: write
  pull-requests: write

jobs:
  repo-tree:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - run: sudo apt-get update && sudo apt-get install -y tree

      - name: Generate REPO_TREE.md
        run: |
          set -euo pipefail
          {
            echo "# Repository Tree"
            echo
            echo "Generated on: $(date -u +%Y-%m-%dT%H:%M:%SZ)"
            echo
            echo '```'
            tree -a -L 6 \
              -I '.git|node_modules|dist|build|.next|coverage|.turbo|.cache|.DS_Store'
            echo '```'
          } > REPO_TREE.md

      - name: Detect changes
        id: diff
        run: |
          if git diff --quiet; then
            echo "changed=false" >> "$GITHUB_OUTPUT"
          else
            echo "changed=true" >> "$GITHUB_OUTPUT"
          fi

      - name: Create Pull Request
        if: steps.diff.outputs.changed == 'true'
        uses: peter-evans/create-pull-request@v6
        with:
          commit-message: "chore(ci): update repository tree"
          title: "chore(ci): update repository tree"
          body: |
            Automated update of `REPO_TREE.md`.

            - Generated by CI
            - No manual edits
            - Safe to merge
          branch: ci/repo-tree-update
          delete-branch: true
