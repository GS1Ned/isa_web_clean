{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "corpus"
  ],
  "properties": {
    "corpus": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "instrument_id",
          "name",
          "status",
          "scope",
          "authority",
          "last_verified"
        ],
        "properties": {
          "instrument_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "confirmed",
              "provisional"
            ]
          },
          "scope": {
            "type": "string"
          },
          "authority": {
            "type": "string"
          },
          "celex": {
            "type": [
              "string",
              "null"
            ]
          },
          "eli_url": {
            "type": [
              "string",
              "null"
            ]
          },
          "formats": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "effect_status": {
            "type": "string"
          },
          "last_verified": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          }
        }
      }
    }
  }
}