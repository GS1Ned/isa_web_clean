{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gs1isa.com/schemas/dataset-registry.schema.json",
  "title": "ISA Dataset Registry",
  "type": "object",
  "additionalProperties": false,
  "required": ["registryVersion", "generatedAt", "datasets"],
  "properties": {
    "registryVersion": { "type": "string", "minLength": 1 },
    "generatedAt": { "type": "string", "format": "date-time" },
    "generatedBy": { "type": "string" },
    "notes": { "type": "string" },
    "datasets": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/dataset" }
    }
  },
  "$defs": {
    "dataset": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "publisher",
        "jurisdiction",
        "sourceType",
        "canonicalDomains",
        "status",
        "version",
        "releaseDate",
        "license",
        "access",
        "formats",
        "repoAssets",
        "lineage"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9\\-_.:]{2,80}$"
        },
        "title": { "type": "string", "minLength": 3 },
        "description": { "type": "string" },
        "publisher": { "type": "string", "minLength": 2 },
        "jurisdiction": {
          "type": "string",
          "enum": ["EU", "NL", "EU+NL", "GS1", "Other"]
        },
        "sourceType": {
          "type": "string",
          "enum": [
            "regulation_text",
            "delegated_act",
            "guidance",
            "taxonomy",
            "standard_spec",
            "data_model",
            "vocabulary",
            "implementation_guide",
            "tooling_reference",
            "dataset"
          ]
        },
        "canonicalDomains": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/canonicalDomain" }
        },
        "status": {
          "type": "string",
          "enum": ["mvp", "v1", "future", "archival"]
        },
        "version": { "type": "string", "minLength": 1 },
        "releaseDate": { "type": "string", "format": "date" },
        "effectiveFrom": { "type": "string", "format": "date" },
        "effectiveTo": { "type": "string", "format": "date" },
        "language": {
          "type": "array",
          "items": { "type": "string", "enum": ["EN", "NL"] },
          "minItems": 1
        },
        "license": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["public", "restricted", "licensed", "unknown"]
            },
            "termsUrl": { "type": "string" },
            "notes": { "type": "string" }
          }
        },
        "access": {
          "type": "object",
          "additionalProperties": false,
          "required": ["method"],
          "properties": {
            "method": {
              "type": "string",
              "enum": ["direct_download", "portal", "api", "purchase", "internal"]
            },
            "primaryUrl": { "type": "string" },
            "mirrorUrls": {
              "type": "array",
              "items": { "type": "string" }
            },
            "credentialsRequired": { "type": "boolean" },
            "notes": { "type": "string" }
          }
        },
        "formats": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/format" }
        },
        "repoAssets": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/repoAsset" }
        },
        "lineage": {
          "type": "object",
          "additionalProperties": false,
          "required": ["hashes"],
          "properties": {
            "supersedes": { "type": "string" },
            "supersededBy": { "type": "string" },
            "derivedFrom": {
              "type": "array",
              "items": { "type": "string" }
            },
            "hashes": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/$defs/hash" }
            }
          }
        },
        "ingestion": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "module": { "type": "string" },
            "targetTables": {
              "type": "array",
              "items": { "type": "string" }
            },
            "refreshCadence": {
              "type": "string",
              "enum": ["ad_hoc", "monthly", "quarterly", "semiannual", "annual"]
            }
          }
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "canonicalDomain": {
      "type": "string",
      "enum": [
        "Regulations_and_Obligations",
        "Disclosures_and_Datapoints",
        "GS1_Standards_and_Specs",
        "GS1_Sector_Data_Models",
        "Product_and_Packaging",
        "Supply_Chain_Traceability",
        "Circularity_and_Materials",
        "Assurance_and_Auditability",
        "Identifiers_and_Digital_Link",
        "Vocabularies_and_Taxonomies"
      ]
    },
    "format": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mediaType"],
      "properties": {
        "mediaType": {
          "type": "string",
          "enum": [
            "application/pdf",
            "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
            "text/csv",
            "application/json",
            "text/markdown",
            "application/zip",
            "text/plain"
          ]
        },
        "notes": { "type": "string" }
      }
    },
    "repoAsset": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path"],
      "properties": {
        "path": { "type": "string", "minLength": 3 },
        "role": {
          "type": "string",
          "enum": ["canonical", "supporting", "archival", "quarantine"]
        },
        "bytes": { "type": "integer", "minimum": 0 }
      }
    },
    "hash": {
      "type": "object",
      "additionalProperties": false,
      "required": ["alg", "value"],
      "properties": {
        "alg": { "type": "string", "enum": ["sha256", "sha1", "md5"] },
        "value": { "type": "string", "minLength": 16 }
      }
    }
  }
}
