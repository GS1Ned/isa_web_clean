{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://isa.gs1nl.org/schemas/governance.schema.json",
  "title": "ISA Governance Gate",
  "type": "object",
  "required": ["meta", "status", "checks", "thresholds"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["generated_at"],
      "properties": {
        "generated_at": {"type": "string", "format": "date-time"}
      }
    },
    "status": {
      "type": "string",
      "enum": ["pass", "fail"]
    },
    "checks": {
      "type": "object",
      "required": ["validation_gates", "evidence_markers", "contract_completeness", "catalogue_freshness"],
      "properties": {
        "validation_gates": {
          "type": "object",
          "required": ["passing", "total"],
          "properties": {
            "passing": {"type": "integer", "minimum": 0},
            "total": {"type": "integer", "minimum": 0}
          }
        },
        "evidence_markers": {
          "type": "object",
          "required": ["count"],
          "properties": {
            "count": {"type": "integer", "minimum": 0}
          }
        },
        "contract_completeness": {
          "type": "object",
          "required": ["pct"],
          "properties": {
            "pct": {"type": "number", "minimum": 0, "maximum": 100}
          }
        },
        "catalogue_freshness": {
          "type": "object",
          "required": ["days_old"],
          "properties": {
            "days_old": {"type": "number", "minimum": 0}
          }
        }
      }
    },
    "thresholds": {
      "type": "object",
      "required": ["validation_gates_min", "evidence_markers_min", "contract_completeness_min", "catalogue_freshness_max_days"],
      "properties": {
        "validation_gates_min": {"type": "integer", "minimum": 0},
        "evidence_markers_min": {"type": "integer", "minimum": 0},
        "contract_completeness_min": {"type": "number", "minimum": 0, "maximum": 100},
        "catalogue_freshness_max_days": {"type": "number", "minimum": 0}
      }
    }
  }
}
