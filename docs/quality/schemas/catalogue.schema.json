{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://isa.gs1nl.org/schemas/catalogue.schema.json",
  "title": "ISA Evidence Catalogue",
  "type": "object",
  "required": ["meta", "evidence_markers", "datasets", "contracts"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["generated_at", "version"],
      "properties": {
        "generated_at": {"type": "string", "format": "date-time"},
        "version": {"type": "string"}
      }
    },
    "evidence_markers": {
      "type": "object",
      "required": ["total", "by_category"],
      "properties": {
        "total": {"type": "integer", "minimum": 0},
        "by_category": {
          "type": "object",
          "properties": {
            "implementation": {"type": "integer", "minimum": 0},
            "requirement": {"type": "integer", "minimum": 0},
            "decision": {"type": "integer", "minimum": 0},
            "constraint": {"type": "integer", "minimum": 0}
          }
        }
      }
    },
    "datasets": {
      "type": "object",
      "required": ["total", "with_provenance"],
      "properties": {
        "total": {"type": "integer", "minimum": 0},
        "with_provenance": {"type": "integer", "minimum": 0}
      }
    },
    "contracts": {
      "type": "object",
      "required": ["total", "completeness_pct"],
      "properties": {
        "total": {"type": "integer", "minimum": 0},
        "completeness_pct": {"type": "number", "minimum": 0, "maximum": 100}
      }
    }
  }
}
