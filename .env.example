# ISA Environment Configuration
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control

# =============================================================================
# REQUIRED VARIABLES (Server will not start without these)
# =============================================================================

# Manus Application ID
VITE_APP_ID=

# JWT Secret for session cookies (must be >= 32 characters)
JWT_SECRET=

# Database connection string (MySQL/TiDB)
DATABASE_URL=mysql://username:password@host:port/database

# =============================================================================
# AUTHENTICATION & AUTHORIZATION
# =============================================================================

# Manus OAuth server URL
OAUTH_SERVER_URL=https://manus.im

# Owner OpenID for admin access
OWNER_OPEN_ID=

# =============================================================================
# AI & ML SERVICES
# =============================================================================

# OpenAI API key for GPT-4 and embeddings
OPENAI_API_KEY=

# =============================================================================
# MANUS INTEGRATION
# =============================================================================

# Manus Forge API URL
BUILT_IN_FORGE_API_URL=

# Manus Forge API Key
BUILT_IN_FORGE_API_KEY=

# Manus API Key
MANUS_API_KEY=

# Frontend Forge API URL
VITE_FRONTEND_FORGE_API_URL=https://forge.manus.ai

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================

# GitHub Personal Access Token
GITHUB_PAT=

# GitHub Token (alternative)
GH_TOKEN=

# GitHub App Private Key (for GitHub App integration)
GITHUB_APP_PRIVATE_KEY=

# GitHub App ID
GITHUB_APP_ID=

# GitHub App Installation ID
INSTALLATION_ID=

# =============================================================================
# TIDB CLOUD
# =============================================================================

# TiDB Private Key
TIDB_PRIVATE_KEY=

# TiDB Public Key
TIDB_PUBLIC_KEY=

# =============================================================================
# SCHEDULED TASKS
# =============================================================================

# Cron secret for authenticated cron endpoints
CRON_SECRET=

# =============================================================================
# EMAIL (Optional - for notifications)
# =============================================================================

# SendGrid API Key
SENDGRID_API_KEY=

# Sender email address
SENDER_EMAIL=

# SMTP Configuration (alternative to SendGrid)
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=
SMTP_USER=
SMTP_PASSWORD=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Server port (optional, defaults to 3000)
PORT=

# Application URL (for callbacks)
VITE_APP_URL=

# ISA Advisory version (for advisory report generation)
ISA_ADVISORY_VERSION=

# =============================================================================
# TESTING & DEVELOPMENT
# =============================================================================

# Run database tests (true/false)
RUN_DB_TESTS=false

# Run CELLAR tests (true/false)
RUN_CELLAR_TESTS=false

# Vitest flag (automatically set by vitest)
VITEST=

# Duplicate keys (for compatibility)
AppID=
OWNER_OPEN_ID=
OAUTH_SERVER_URL=
OWNER_OPEN_ID=